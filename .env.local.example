# Gemini API (client-side; will be embedded into the bundle)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Gemma External API (server-side Netlify Function only)
# Set these in Netlify Environment Variables (NOT with VITE_ prefix)
GEMMA_EXTERNAL_API_URL=
GEMMA_EXTERNAL_API_AUTH_HEADER=Authorization
GEMMA_EXTERNAL_API_AUTH_VALUE=

# Firebase Configuration
# https://console.firebase.google.com adresinden alÄ±n
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

